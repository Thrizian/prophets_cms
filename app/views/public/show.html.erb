<% @page_title = @page.name.titlecase %>

<h2><%= @page.name%></h2>

<% @page.sections.visible.sorted.each do |section| %>
  <div class="segment">
    <% case section.content_type %>
    <% when 'HTML' %>
      <%= raw(sanitize(section.content, tags: ['strong', 'em', 'a', 'i', 'b'])) %>
    <% when 'text' %>
       <%= simple_format(section.content) %>
    <% end %>
  </div>
<% end %>