<%= render 'shared/title' %>

<div class="pages show">
  <h2>Showing Page <%= @page.name %></h2>
  <%= link_to('<< Back to index', pages_path(subject_id: @subject.id), class: 'back-link') %>

  <table summary="Page detail view">
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>

    <tr>
      <th>Name</th>
      <td><%= @page.name %></td>
    </tr>

    <tr>
      <th>Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>

    <tr>
      <th>Subject ID</th>
      <td><%= @page.subject_id %></td>
    </tr>

    <tr>
      <th>Visible</th>
      <td><%= status_tag(@page.visible) %></td>
    </tr>

    <tr>
      <th>Created</th>
      <td><%= @page.created_at %></td>
    </tr>

    <tr>
      <th>Updated</th>
      <td><%= @page.updated_at %></td>
    </tr>
  </table>

</div>