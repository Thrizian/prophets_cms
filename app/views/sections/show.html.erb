<%= render 'shared/title' %>

<div class="sections show">
  <h2>Showing Section <%= @section.name %></h2>

  <%= render partial: 'back_to_index', locals: {page: @page} %>

  <table summary="Section detail view">
    <tr>
      <th>Position</th>
      <td><%= @section.position %></td>
    </tr>

    <tr>
      <th>Name</th>
      <td><%= @section.name %></td>
    </tr>

    <tr>
      <th>Content</th>
      <td><%= @section.content %></td>
    </tr>

    <tr>
      <th>Content Type</th>
      <td><%= @section.content_type %></td>
    </tr>

    <tr>
      <th>Page</th>
      <td><%= @section.page_id %></td>
    </tr>

    <tr>
      <th>Visible</th>
      <td><%= status_tag(@section.visible) %></td>
    </tr>

    <tr>
      <th>Created</th>
      <td><%= @section.created_at %></td>
    </tr>

    <tr>
      <th>Updated</th>
      <td><%= @section.updated_at %></td>
    </tr>
  </table>

</div>