<%= error_messages_for(f.object) %>

<table summary="section form fields">
  <tr>
    <th><%= f.label(:position,) %></th>
    <td><%= f.select(:position, 1..@section_count) %></td>
  </tr>

  <tr>
    <th><%= f.label(:name) %></th>
    <td><%= f.text_field(:name) %></td>
  </tr>

  <tr>
    <th><%= f.label(:content) %></th>
    <td><%= f.text_area(:content, size: '40x10') %></td>
  </tr>

  <tr>
    <th><%= f.label(:content_type) %></th>
    <td class="radio">
      <%= f.radio_button(:content_type, 'text') %>
      <%= f.label(:content_type_text, 'Text') %>
      <%= f.radio_button(:content_type, 'html') %>
      <%= f.label(:content_type_html, 'Html')%>
    </td>
  </tr>

  <tr>
    <th><%= f.label(:page) %></th>
    <td><%= f.select(:page_id, @pages.map{ |p| [p.name, p.id] }) %></td>
  </tr>

  <tr>
    <th><%= f.label(:visible) %></th>
    <td><%= f.check_box(:visible) %></td>
  </tr>

</table>