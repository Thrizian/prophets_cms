<!DOCTYPE html>
<html>
  <head>
    <title>Prophets CMS &spades; <%= @page_title || 'Admin Area' %></title>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag('//cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.css', media: 'all') %>
    <%= stylesheet_link_tag('admin', media: 'all') %>
    <%= favicon_link_tag('') %>
  </head>

  <body class="expanded">
    <div id="header">
      <%= render partial: 'layouts/headers', locals: {origin: 'admin'} %>
      <div id="introduction">
        <h1 id="name">Prophets CMS</h1>
      </div>
    </div>

    <div id="main">
      <div id="content">
        <% if flash[:notice].present? %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:error].present? %>
          <div class="error">
            <%= flash[:error] %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>

    <%= render partial: 'layouts/footer' %>
  </body>

</html>