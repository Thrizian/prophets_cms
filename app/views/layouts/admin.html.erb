<!DOCTYPE html>
<html>
  <head>
    <title>Prophets CMS &spades; <%= @page_title || 'Admin Area' %></title>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag('//cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.css', media: 'all') %>
    <%= stylesheet_link_tag('//fonts.googleapis.com/css?family=Roboto:300,300italic,400,400italic,500,500italic,700,700italic', media: 'all') %>
    <%= stylesheet_link_tag('https://fonts.googleapis.com/css?family=Vollkorn+SC:400,600,700,900&display=swap', media: 'all') %>
    <%= stylesheet_link_tag('https://fonts.googleapis.com/css?family=Varela+Round&display=swap', media: 'all') %>
    <%= stylesheet_link_tag('application', media: 'all') %>
    <%= favicon_link_tag('') %>

  </head>

  <body>
    <div id="header">
      <div id="navigation" onmouseenter=makeVisible('odd','even'); onmouseleave=makeHidden('odd','even');>
        <%= render(partial: 'layouts/navigation', locals: {subjects: @subjects} ) %>
      </div>
      <div id="animator">
        <%= render partial: 'layouts/menu_image' %>
      </div>
      <div id="introduction">
        <h1 id="name">Prophets CMS</h1>
      </div>
    </div>

    <div id="main">
      <% if flash[:notice].present? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:error].present? %>
        <div class="error">
          <%= flash[:error] %>
        </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>

    <div id="footer">
      <p id="copyright">&copy; prophets.nl</p>
    </div>
  </body>

</html>